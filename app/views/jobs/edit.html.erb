<h1 class='title'>Modify Job</h1>

<%= form_for(@job) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :range %><br />
    <%= f.text_area :range, :size => "35x5" %>
  </p>
  <p>
    <%= f.label :seconds %><br />
    <%= f.text_field :seconds %>
  </p>
  <p>
    <%= f.label :lines %><br />
    <%= f.text_field :lines %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @job %> |
<%= link_to 'Back', jobs_path %>
