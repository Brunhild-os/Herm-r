<% include_view_javascript %>

<% call = @result %>

<h1 class='title'>
<%= @result.number %>
<% if @job_id %>
(<a href="<%= view_analyze_path(@project.id, call.job_id)%>">Back to Job Analysis</a>)
<% else %>
(<a href="<%= analyze_path(@project.id)%>">Back to Project Analysis</a>)
<% end %>
</h1>

<table class='table table-striped table-condensed'>
  <thead>
  <tr>
    <th>Number</th>
    <th>Type</th>
  	<th>Signal</th>
  </tr>
 </thead>
 <tbody>
  <tr>
    <td align='center'>
		<%= render :partial => 'shared/call_info', :locals => { :call => call } %>
	</td>
	<td align='center'>
		<%= render :partial => 'shared/call_type', :locals => { :call => call } %>
	</td>
  	<td align='center'>
		<%= render :partial => 'shared/call_signal', :locals => { :call => call } %>
	</td>
  </tr>
 </tbody>
</table><br/><br/>

<% if @results.length > 0 %>



<h1 class='title'><%= pluralize(@results.total_entries, 'Possible Match') %> for <%= @result.number %></h1>


<div class='pull-right'>
	<%= select_match_scope(@match_scopes, params) %>
</div>

<%= will_paginate @results, :renderer => BootstrapPagination::Rails %>

<table class='table table-striped table-condensed'>
  <thead>
  <tr>
  	<th>Score</th>
    <th>Number</th>
<% case @match_scope %>
<% when 'project' %>
    <th>Job</th>
<% when 'global' %>
    <th>Project</th>
<% end %>
    <th>Type</th>
  	<th>Signal</th>
  </tr>
  </thead>
  <tbody>
<%  @results.each do |call| %>
  <tr>
    <td align='center'>
	    <%= raw(fwd_match_html(call.matchscore)) %>
    </td>
    <td align='center'>
		<%= render :partial => 'shared/call_info', :locals => { :call => call } %>
	</td>
<% case @match_scope %>
<% when 'project' %>
    <td align='center'><%= call.job.id %></td>
<% when 'global' %>
    <td align='center'><%= link_to h(call.project.name), project_path(call.project) %></td>
<% end %>
	<td align='center'>
		<%= render :partial => 'shared/call_type', :locals => { :call => call } %>
	</td>
  	<td align='center'>
		<%= render :partial => 'shared/call_signal', :locals => { :call => call } %>
	</td>
  </tr>
<% end %>
</tbody>
</table>

<%= will_paginate @results, :renderer => BootstrapPagination::Rails %>


<% else %>

<h1 class='title'>No Matches for <%= @result.number %> (<%= @result.created_at.strftime("%Y-%m-%d") %>)</h1>

<% end %>
